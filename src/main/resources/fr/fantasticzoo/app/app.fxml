<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="fr.fantasticzoo.app.Controller">

    <Label text="les enclos :" />
    <Label fx:id="chrono" />
    <FlowPane fx:id="enclosures" maxWidth="600" prefWidth="400">
    </FlowPane>

    <Label fx:id="welcomeText" />

    <Label text="Sélectionnez une créature :">
        <layoutX>20</layoutX>
        <layoutY>20</layoutY>
    </Label>

    <ComboBox fx:id="selectedCreature">
        <layoutX>20</layoutX>
        <layoutY>50</layoutY>
    </ComboBox>
    <Button onAction="#createEnclosure" text="Creer" />
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

</VBox>
