<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.fantasticzoo.app.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>

    <Label text="Sélectionnez une créature :">
        <layoutX>20</layoutX>
        <layoutY>20</layoutY>
    </Label>

    <ComboBox fx:id="selectedCreature">
        <layoutX>20</layoutX>
        <layoutY>50</layoutY>
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Lycanthropes"/>
                <String fx:value="Licornes"/>
                <String fx:value="Nymphes"/>
                <String fx:value="Krakens"/>
                <String fx:value="Sirènes"/>
                <String fx:value="Mégalodons"/>
                <String fx:value="Phénix"/>
                <String fx:value="Dragons"/>
            </FXCollections>
        </items>
    </ComboBox>
    <Button text="Creer" onAction="#createCreature"/>
</VBox>
